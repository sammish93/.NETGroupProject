<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hiof.DotNetCourse.V2023.Group14.BookAppMaui.View.LibraryPage"
             xmlns:viewmodel="clr-namespace:Hiof.DotNetCourse.V2023.Group14.BookAppMaui.ViewModel"
             xmlns:model="clr-namespace:Hiof.DotNetCourse.V2023.Group14.ClassLibrary.Classes.V1;assembly=Hiof.DotNetCourse.V2023.Group14.ClassLibrary"
             Title="LibraryPage"
             BackgroundColor="White">

    <Grid
            Margin="0"
        ColumnSpacing="5">
        
        


        <FlexLayout Direction="Column" JustifyContent="Center" AlignItems="Center" AlignContent="Center">
            <CollectionView 
                        ItemsSource="{Binding CurrentlyReading}"
                        
                        ItemsLayout="VerticalList"
                        SelectionMode="Single"
                        SelectionChanged="OnItemSelected"
                        Grid.Row="1"
                        BackgroundColor="Violet">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="20" ColumnSpacing="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image 
                Source="{Binding ImageSource}"
                Aspect="AspectFit"
                HeightRequest="100"
                WidthRequest="100" />
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>

                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="160"/>
                                </Grid.ColumnDefinitions>
                                <Label 
                    Grid.Row="0"
                    Text="{Binding Title}"
                    FontAttributes="Bold"
                    LineBreakMode="CharacterWrap"
                    FontSize="14"
                    Margin="0,5,0,0" />
                                <Label 
                    Grid.Row="1"
                    Text="{Binding MainAuthor}"
                    LineBreakMode="CharacterWrap"
                    FontAttributes="Italic"
                    FontSize="12"
                    Margin="0,5,0,0" />
                                <Label 
                    Grid.Row="2"
                    Text="{Binding Rating}"
                    LineBreakMode="CharacterWrap"
                    FontAttributes="Bold"
                    FontSize="12"
                    Margin="0,5,0,0" />
                                <Label 
                    Grid.Row="3"
                    Text="{Binding ReadingStatus}"
                    LineBreakMode="CharacterWrap"
                    FontAttributes="Bold"
                    FontSize="12"
                    Margin="0,5,0,0" />
                              
             
                    
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>
            <CollectionView 
                        ItemsSource="{Binding ToBeRead}"
                        SelectionMode="Single"
                        SelectionChanged="OnItemSelected"
                        ItemsLayout="VerticalList"
                        Grid.Row="1"
                        BackgroundColor="Violet">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="20" ColumnSpacing="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image 
                Source="{Binding ImageSource}"
                Aspect="AspectFit"
                HeightRequest="100"
                WidthRequest="100" />
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="160"/>
                                </Grid.ColumnDefinitions>
                                <Label 
                    Grid.Row="0"
                    Text="{Binding Title}"
                    FontAttributes="Bold"
                    LineBreakMode="CharacterWrap"
                    FontSize="14"
                    Margin="0,5,0,0" />
                                <Label 
                    Grid.Row="1"
                    Text="{Binding MainAuthor}"
                    LineBreakMode="CharacterWrap"
                    FontAttributes="Italic"
                    FontSize="12"
                    Margin="0,5,0,0" />
                                <Label 
                    Grid.Row="2"
                    Text="{Binding Rating}"
                    LineBreakMode="CharacterWrap"
                    FontAttributes="Bold"
                    FontSize="12"
                    Margin="0,5,0,0" />
                                <Label 
                    Grid.Row="3"
                    Text="{Binding ReadingStatus}"
                    LineBreakMode="CharacterWrap"
                    FontAttributes="Bold"
                    FontSize="12"
                    Margin="0,5,0,0" />
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>
            <CollectionView 
                        ItemsSource="{Binding ReadEntries }"
                        SelectionMode="Single"
                        SelectionChanged="OnItemSelected"
                        ItemsLayout="VerticalList"
                        Grid.Row="1"
                        BackgroundColor="Violet">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="20" ColumnSpacing="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image 
                Source="{Binding ImageSource}"
                Aspect="AspectFit"
                HeightRequest="100"
                WidthRequest="100" />
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="160"/>
                                </Grid.ColumnDefinitions>
                                <Label 
                    Grid.Row="0"
                    Text="{Binding Title}"
                    FontAttributes="Bold"
                    LineBreakMode="CharacterWrap"
                    FontSize="14"
                    Margin="0,5,0,0" />
                                <Label 
                    Grid.Row="1"
                    Text="{Binding MainAuthor}"
                    LineBreakMode="CharacterWrap"
                    FontAttributes="Italic"
                    FontSize="12"
                    Margin="0,5,0,0" />
                                <Label 
                    Grid.Row="2"
                    Text="{Binding Rating}"
                    LineBreakMode="CharacterWrap"
                    FontAttributes="Bold"
                    FontSize="12"
                    Margin="0,5,0,0" />
                                <Label 
                    Grid.Row="3"
                    Text="{Binding ReadingStatus}"
                    LineBreakMode="CharacterWrap"
                    FontAttributes="Bold"
                    FontSize="12"
                    Margin="0,5,0,0" />
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

        


        </FlexLayout>

        
    </Grid>
</ContentPage>